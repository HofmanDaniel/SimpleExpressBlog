include components/base.pug
include components/header.pug

each articolo in data
    .container-md.p-2
        .card.mb-4
            .card-body
                h5.card-title=articolo.titolo
            .card-footer
                a.btn.btn-secondary.mx-2(href="/modifica/" + articolo.id) Modifica
                a.btn.btn-danger.mx-2(href="/rimuovi/" + articolo.id) Rimuovi

include components/footer.pug
